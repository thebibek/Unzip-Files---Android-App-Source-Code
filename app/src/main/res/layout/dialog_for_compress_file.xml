<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_268sdp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_2sdp">

        <RelativeLayout
            android:id="@+id/top1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp">

            <RelativeLayout
                android:id="@+id/tp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/icon_of_item"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/_10sdp"
                    android:src="@drawable/icon_unknown" />

                <TextView
                    android:id="@+id/name_of_selected_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/icon_of_item"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="2"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/corcer_line"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:id="@+id/size_of_file"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_of_selected_item"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/icon_of_item"
                    android:text="size"
                    android:textColor="#ff636363"
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>

            <View
                android:id="@+id/lin1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/tp1"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="#ff9c9c9c" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin1"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="center"
                android:text="@string/compression_format"
                android:textColor="#ff363636"
                android:textSize="@dimen/_13sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp">

                    <RelativeLayout
                        android:id="@+id/compress_7z"
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="@dimen/_80sdp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                            <ImageView
                                android:id="@+id/g1"
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/seven_z_dialog" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/g1"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="0dp"
                                android:gravity="center"
                                android:text="@string/compress_7z"
                                android:textColor="#ff363636"
                                android:textSize="@dimen/_11sdp" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <View
                        android:id="@+id/v6"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/compress_7z" />

                    <RelativeLayout
                        android:id="@+id/compress_tar_gz"
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_toRightOf="@+id/v6">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                            <ImageView
                                android:id="@+id/g7"
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/tar_gz_dialog" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/g7"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="@string/compress_tar_gz"
                                android:textColor="#ff363636"
                                android:textSize="@dimen/_11sdp" />
                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/croun1_back"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:background="#47e1e1e1"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/croun1"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="@dimen/_3sdp" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/v1"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/compress_tar_gz" />

                    <RelativeLayout
                        android:id="@+id/compress_zip"
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_toRightOf="@+id/v1">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                            <ImageView
                                android:id="@+id/g2"
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/zip_dialog" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/g2"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:gravity="center"
                                android:text="@string/compress_zip"
                                android:textColor="#ff363636"
                                android:textSize="@dimen/_11sdp" />
                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/croun2_back"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:background="#47e1e1e1"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/croun2"
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="@dimen/_3sdp" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/v2"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/compress_zip" />

                    <RelativeLayout
                        android:id="@+id/compress_gzip"
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_toRightOf="@+id/v2">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                            <ImageView
                                android:id="@+id/g3"
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/g_zip_dialog" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/g3"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:gravity="center"
                                android:text="@string/compress_gzip"
                                android:textColor="#ff363636"
                                android:textSize="@dimen/_11sdp" />
                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/croun3_back"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:background="#47e1e1e1"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/croun3"
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="@dimen/_3sdp" />
                    </RelativeLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="#ff9c9c9c" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="center">

                    <RelativeLayout
                        android:id="@+id/open_file"
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="@dimen/_80sdp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                            <ImageView
                                android:id="@+id/g4"
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/open_file_dialog" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/g4"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:gravity="center"
                                android:text="@string/open_file"
                                android:textColor="#ff363636"
                                android:textSize="@dimen/_11sdp" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <View
                        android:id="@+id/v3"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/open_file" />

                    <RelativeLayout
                        android:id="@+id/delete"
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_toRightOf="@+id/v3">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                            <ImageView
                                android:id="@+id/g8"
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/delete" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/g8"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/_10sdp"

                                android:gravity="center"
                                android:text="@string/delete_file"
                                android:textColor="#ff363636"
                                android:textSize="@dimen/_11sdp" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <View
                        android:id="@+id/v4"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/delete" />

                    <RelativeLayout
                        android:id="@+id/share"
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_toRightOf="@+id/v4">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                            <ImageView
                                android:id="@+id/g5"
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/share_dialog" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/g5"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:gravity="center"
                                android:text="@string/share_file"
                                android:textColor="#ff363636"
                                android:textSize="@dimen/_11sdp" />
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
